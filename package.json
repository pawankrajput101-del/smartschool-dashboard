{
  "name": "smart-school-electron",
  "version": "1.0.2",
  "description": "SmartSchool Dashboard with License System",
  "main": "main.js",
  "author": "PKVS Rajput",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.smartschool.dashboard",
    "productName": "SmartSchool Dashboard",
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "dashboard.js",
      "moduleLoader.js",
      "index.html",
      "modules/**/*",
      "assets/**/*",
      "public.pem",
      "package.json"
    ],
    "artifactName": "${productName} Setup ${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "pawankrajput101-del",
        "repo": "smartschool-dashboard",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": ["nsis", "zip"]
    }
  },
  "devDependencies": {
    "asar": "^3.2.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2"
  }
}
