{
  "name": "smart-school-electron",
  "version": "1.0.0",
  "description": "SmartSchool Dashboard with License System",
  "main": "main.js",
  "author": "PKVS Rajput",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.smartschool.dashboard",
    "productName": "SmartSchool Dashboard",
    "directories": {
      "buildResources": "assets"
    },
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "dashboard.js",
      "index.html",
      "modules/**/*",
      "assets/**/*",
      "public.pem",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "pkvsrajput",
        "repo": "smartschool-dashboard"
      }
    ]
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0",
    "electron-updater": "^6.6.2"
  }
}
